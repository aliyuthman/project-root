# ===========================================
# Data Purchase Backend - Environment Variables
# ===========================================

# Server Configuration
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000

# ===========================================
# Database Configuration (Supabase)
# ===========================================
DATABASE_URL="postgresql://postgres:password@db.project-ref.supabase.co:5432/postgres"
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# ===========================================
# Payment Gateway (ErcasPay)
# ===========================================
# Sandbox Environment
ERCASPAY_SANDBOX_BASE_URL=https://api.merchant.staging.ercaspay.com/api/v1
ERCASPAY_SANDBOX_PUBLIC_KEY=test_pk_your-sandbox-public-key
ERCASPAY_SANDBOX_SECRET_KEY=test_sk_your-sandbox-secret-key

# Production Environment (uncomment for production)
# ERCASPAY_LIVE_BASE_URL=https://api.ercaspay.com/api/v1
# ERCASPAY_LIVE_PUBLIC_KEY=live_pk_your-live-public-key
# ERCASPAY_LIVE_SECRET_KEY=live_sk_your-live-secret-key

# Current Environment
ERCASPAY_ENVIRONMENT=sandbox
ERCASPAY_WEBHOOK_SECRET=your-webhook-secret-key

# ===========================================
# Data Aggregator (GladTidingsData)
# ===========================================
GLADTIDINGS_BASE_URL=https://www.gladtidingsdata.com
GLADTIDINGS_API_KEY=15b9d00abc71f46bb29f6a407683655b3ced3c5d
GLADTIDINGS_API_SECRET=your-gladtidings-api-secret

# ===========================================
# Security Configuration
# ===========================================
JWT_SECRET=your-super-secure-jwt-secret-change-in-production
CORS_ORIGINS=http://localhost:3000,https://your-frontend-domain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# External Services
# ===========================================
# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# SMS Configuration (for OTP if needed)
SMS_API_KEY=your-sms-api-key
SMS_SENDER_ID=DataPurchase

# ===========================================
# Monitoring & Logging
# ===========================================
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# Sentry (Error Tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ===========================================
# Webhook URLs
# ===========================================
ERCASPAY_WEBHOOK_URL=https://your-backend-domain.com/api/webhooks/ercaspay
GLADTIDINGS_WEBHOOK_URL=https://your-backend-domain.com/api/webhooks/gladtidings

# ===========================================
# Development Settings
# ===========================================
DEBUG_MODE=true
DATABASE_LOGGING=false